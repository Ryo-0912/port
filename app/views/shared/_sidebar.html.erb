<style>
  .side {
    background-color: #8fbc8f;
    width:200px;
    height:735px;
    text-align:center;
    position: relative;
  }

  .genreform {
    position: absolute;
    top: 30px;
    left: 200px;
  }
</style>

<div class="side">

  <svg style="display: none;">
    <symbol id="icon-add" viewBox="0 0 24 24">
      <path d="M18 13h-5v5c0 .55-.45 1-1 1s-1-.45-1-1v-5H6c-.55 0-1-.45-1-1s.45-1 1-1h5V6c0-.55.45-1 1-1s1 .45 1 1v5h5c.55 0 1 .45 1 1s-.45 1-1 1z"></path>
    </symbol>
  </svg>

  <span><%= "ジャンル" %></span>

  <span>
    <button id="gbtn" class="knopf even pill shade inverse m-">
      <svg class="icon">
        <use xlink:href="#icon-add"></use>
      </svg>
    </button>
  </span>

  <!-- 登録したデータを取得し、ジャンルの下に出す。その際、「あかさたな...」でグループ分けする -->
  <div class="genrelist">
    <% genres = Genre.all %>
    <% genres.each do |g| %>
      <title><%= g.name.to_hiragana('g') %></title>
      <div class='edit-delete-btn'>
        <span class="list-inline-item">
          <%= link_to edit_genre_path(g.id), id: 'button-edit-#{g.id}' do %>
          <i id="pen" class="fas fa-pen"></i>
          <% end %>
        </span>

        <span class="list-inline-item">
          <%= link_to genre_path(g.id), id: 'button-delete-#{g.id}', method: :delete, data: { confirm: "ジャンル「#{g.name}」を削除しますが、よろしいですか？" } do %>
          <i id="trash" class="fas fa-trash"></i>
          <% end %>
        </span>
      </div>

    <% end %>
  </div>

　<span class="genreform" id="gform">
    <%= form_with model: genre, local: true do |form| %>
      <%= form.text_field :name %>
      <%= form.submit "登録" %>
    <% end %>
  </span>

</div>

<script>
  const btn = document.getElementById('gbtn');
  const form = document.getElementById('gform');
  btn.addEventListener('click', () => {

    if (form.style.display === 'none'){
      form.style.display = 'block';
    } else (form.style.display === 'block'){
      form.style.display = 'none';
    }
  })


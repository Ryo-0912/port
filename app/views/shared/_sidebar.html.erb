<style>

  .side a::after {
    content: "+";
    position: absolute;
    left: 2px;
  }

  .side a{
    position: relative;
    height: 100px;
    width: 100px;
  }

  .side {
    background-color: #8fbc8f;
    width:200px;
    height:735px;
    text-align:center;
  }
</style>

<div class="side">
  <p><%= "ジャンル" %><a href=""><%= "○" %></a></p>

  <svg style="display: none;">
    <symbol id="icon-add" viewBox="0 0 24 24">
      <path d="M18 13h-5v5c0 .55-.45 1-1 1s-1-.45-1-1v-5H6c-.55 0-1-.45-1-1s.45-1 1-1h5V6c0-.55.45-1 1-1s1 .45 1 1v5h5c.55 0 1 .45 1 1s-.45 1-1 1z"></path>
    </symbol>
  </svg>

<button id="gbtn" class="knopf even pill shade inverse m-">
    <svg class="icon">
      <use xlink:href="#icon-add"></use>
    </svg>
</button>
</div>

<script>
　// +ボタン押したら、フォーム画面を出現させる
  const genrebtn = document.getElementById('gbtn');　// 定数の定義
  var form = document.createElement('form');　// グローバル変数の定義

  genrebtn.addEventListener('click', () => { // genrebtnつまりbuttonタグをクリックしたら
    document.body.appendChild(form); // formタグ(要素)をuse要素の後ろに追加する
  });
</script>
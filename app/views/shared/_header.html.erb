<style>
  .navbar navbar-expand-lg navigation navbar-light bg-light{
    right: 30px;
  }

  .userinfo{
    padding-top: 30px;
    width: 100px;
    left:5%;
    position: absolute;
    box-sizing: border-box;
    text-align: center;
    visibility: hidden;
  }

  .mypage{
    left: 40px;
  }

  .mypage:hover .userinfo{
    visibility: visible;
  }

  .logoutlink{
    position: relative;
  }

  .logout{
    padding-top: 30px;
    width: 100px;
    left:60%;
    position: absolute;
    box-sizing: border-box;
    text-align: center;
    visibility: hidden;
  }

  .logoutlink:hover .logout{
    visibility: visible;
  } 

</style>

<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <span>My Note</span>
      <nav class="logoutlink">
      　<%= link_to logout_path, method: :delete do %>
          <i class="fas fa-running fa-2x"></i>
          <span class="logout"><%= "ログアウト" %></span>
        <% end %>
      </nav>
      <nav class="mypage">
        <%= link_to user_path(current_user) do %>
          <i class="fas fa-user fa-2x"></i>
          <span class="userinfo"><%= "ユーザー情報" %></span>
        <% end %>
      </nav>
      <ul class="navbar-nav ml-auto main-nav align-items-center">
        <li class="nav-item dropdown-slide">
          <a href="/genres" class="nav-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="header-profile">
            <%= image_tag 'sample', size: '40x40', class: 'rounded-circle mr15'%>
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>
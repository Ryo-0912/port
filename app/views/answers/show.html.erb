    <div class="card-body ans_show_ans_card-body">
      <h1 class="card-title"><%= (t '.a') %></h1>
      <p class="ans_show_answer"><%= @answer.solution %></p>
      <p class="ans_show_process"><%= (t '.process') %></p>
      <p class="card-content"><%= @answer.process %></p>
    </div>
  </div>
</div>

  <div class="testday">

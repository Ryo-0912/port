<style>
.span{
  margin-left: 530px;
  margin-top: 90px;
  margin-bottom: -50px;
}

.question-card{
  margin-left: 200px;
  margin-top: 150px;
}
.question-card .card-body{
  height: 300px;
}
.answer-card{
  margin-left: 900px;
  margin-top: -320px;
}
.answer-card .card-body{
  height: 300px;
}
.submit-btn{
  top: 80px;
}
.testday .test-form{
  margin-left: 10px;
}
.before-text{
  margin-left: 750px;
}
.after-text{
  margin-left: 950px;
  display: block;
  margin-top: -25px;
}
</style>


<h2 class="span"><%= "問題なければ、問題出現スパンを決めましょう！"%></h2>

<div class="question-card">
  <div class="card border-dark mb-3" style="width: 40rem;">
    <div class="card-body">
      <h1 class="card-title"><%= "Q." %></h1>
      <h1><%= @question.statement %></h1>
      </span>
    </div>
  </div>
</div>

<div class="answer-card">
  <div class="card border-dark mb-3" style="width: 40rem;">
    <div class="card-body">
      <h1 class="card-title"><%= "A." %></h1>
      <p><%= @answer.solution %></p>
      <p><%= @answer.process %></p>
    </div>
  </div>
</div>

  <div class="testday">
  <%= form_with(model: [@question], local: true) do |form| %>
    <span class="before-text"><%= "この問題を" %></span>
    <%= form.number_field :test, class: "test-form", min: 1, max: 31 %>
    <%= form.submit "登録", class: "submit-btn" %>
    <span class="after-text"><%= "日後にテストする" %></span>
  <% end %>
  </div>
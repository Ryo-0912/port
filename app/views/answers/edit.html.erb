<h1><%= (t '.title-edita') %></h1>
<div class="card border-dark mb-3" style="width: 50rem;">
  <div class="card-body">
    <h1 class="card-title"><%= (t '.a') %></h1>
    <div class="answerform" id="asform">
      <%= form_with model: @answer, local: true do |form| %>
        <%= form.text_field :solution, class: 'form' %>
        <%= form.text_area :process, class: 'form-control', placeholder: "プロセス" %>
        <%= form.submit '登録', class: 'submit-btn' %>
      <% end %>
    </div>
  </div>
</div>

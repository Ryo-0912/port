<h1 class="ans_edit_title"><%= (t '.title-edita') %></h1>
<div class="card border-dark mb-3 ans_edit_card" style="width: 50rem;">
  <div class="card-body ans_edit_card-body">
    <h1 class="ans_edit_card-title"><%= (t '.a') %></h1>
    <div class="ans_edit_answerform" id="asform">
      <%= form_with model: @answer, local: true do |form| %>
        <%= form.text_field :solution, class: 'ans_edit_form' %>
        <%= form.text_area :process, class: 'ans_edit_form-control', placeholder: "プロセス" %>
        <%= form.submit '登録', class: 'ans_edit_submit-btn' %>
      <% end %>
    </div>
  </div>
</div>

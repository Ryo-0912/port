<style>
.card{
  font-family: ヒラギノ丸ゴ Pro;
  position: absolute;
  padding-top: 30px;
  margin: 130px 300px 300px 450px;
  height: 650px;
}
.card-title{
  font-weight: bold;
  position: relative;
  left: 40px;
  display: inline;
}
.form-btn{
  position: relative;
  left: 290px;
}
.card-link{
  position: relative;
  text-align: right;
  padding-right: 50px;
}

.answer{
  margin-top: -50px;
  height: 50px;
}

.process{
  height: 60px;
}
.answerform {
  font-family: ヒラギノ丸ゴ Pro;
}
.answerform .form{
  width: 500px;
  height: 130px;
  margin-top: -200px;
  margin-left: 150px;
  margin-bottom: 20px;
  border-top: none;
  border-left: none;
  border-right: none;
  font-size: 80px;
  text-align: center;
}

.answerform .form-control{
  width: 700px;
  height: 380px;
  margin-left: 30px;
  font-size: 30px;
  border-radius: 5px;
}

.answerform .submit-btn{
  margin-left: 650px;
  margin-top: 25px;
  font-size: 30px;
}
.submit-btn{
  border-radius: 5px;
}

</style>


<div class="card border-dark mb-3" style="width: 50rem;">
  <div class="card-body">
    <h1 class="card-title"><%= (t '.a') %></h1>
    <div class="answerform" id="asform">
      <%= form_with(model: [@question, @answer], local: true) do |form| %>
        <%= form.text_field :solution, class: 'form' %>
        <%= form.text_area :process, class: 'form-control', placeholder: "プロセス" %>
        <%= form.submit '登録', class: 'submit-btn' %>
      <% end %>
    </div>
  </div>
</div>

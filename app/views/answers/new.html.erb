<div class="card border-dark mb-3 ans_new_card" style="width: 50rem;">
  <div class="card-body ans_new_card-body">
    <h1 class="ans_new_card-title"><%= (t '.a') %></h1>
    <div class="ans_new_answerform" id="asform">
      <%= form_with(model: [@question, @answer], local: true) do |form| %>
        <%= form.text_field :solution, class: 'ans_new_form' %>
        <%= form.text_area :process, class: 'ans_new_form-control', placeholder: "プロセス" %>
        <%= form.submit '登録', class: 'ans_new_submit-btn' %>
      <% end %>
    </div>
  </div>
</div>

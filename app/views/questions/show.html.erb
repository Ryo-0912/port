<style>
.question-card{
  margin-left: 550px;
  margin-top: 150px;
  transition: 0.5s;
  .Qcard-body{
    opacity: 1.0;
  }
}
.question-card:active{
  transform-origin: 25.5% 50% 0;
  transform: rotate3d(0, 1, 0, 180deg);
  .Qcard-body{
    opacity: 0;
  }
}

.question-card .Qcard-body{
  height: 500px;
  max-height: 45em;
  overflow-y: auto;
}



</style>

<div class="question-card">
  <div class="card border-dark mb-3" style="width: 40rem;">
    <div class="Qcard-body">
      <h1 class="card-title"><%= "Q." %></h1>
      <h1 class="card-content"><%= @question.statement %></h1>
      <h1 class="card-content"><%= @answer.solution %></h1>
    </div>

    <div class="Acard-body">
      <h1 class="card-title"><%= "A." %></h1>
      <p class="answer"><%= @answer.solution %></p>
      <p ><%= "~プロセス~"%></p>
      <p class="card-content"><%= @answer.process %></p>
    </div>
  </div>
</div>

<h1 class="qu_edit_title"><%= (t '.titile-editq') %></h1>
<div class="card border-dark mb-3 qu_edit_card" style="width: 50rem;">
  <div class="card-body qu_edit_card-body">
    <h1 class="qu_edit_card-title"><%= (t '.q') %></h1>
    <span class="qu_edit_questionform" id="qform">
      <%= form_with model: @question, local: true do |form| %>
        <p class="qu_edit_statement-title"><% form.label :statement %></p>
        <p class="qu_edit_statement-form"><%= form.rich_text_area :statement, placeholder: "本文や画像" %></p>
        <p class="qu_edit_form-btn"><%= form.submit "登録" %></p>
      <% end %>
    </span>
  </div>
</div>

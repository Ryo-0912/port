<div class="card border-dark mb-3 qu_new_card" style="width: 50rem;">
  <div class="card-body qu_new_card-body">
    <h1 class="qu_new_card-title"><%= (t '.q') %></h1>
    <span class="qu_new_questionform" id="qform">
      <%= form_with(model: [@genre, @question], local: true) do |form| %>
          <p class="qu_new_statement-title"><% form.label :statement %></p>
          <p><%= form.rich_text_area :statement, placeholder: "本文や画像",  class: "qu_new_statement-form" %></p>
          <p><%= form.submit "登録", class: "qu_new_form-btn" %></p>
      <% end %>
    </span>
  </div>
</div>

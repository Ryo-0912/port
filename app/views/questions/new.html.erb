<style>
.card{
  font-family: ヒラギノ丸ゴ Pro;
  position: absolute;
  padding-top: 30px;
  margin: 130px 300px 300px 450px;
}
.card-title{
  font-weight: bold;
  position: relative;
  left: 40px;
}
.questionform {
  font-family: ヒラギノ丸ゴ Pro;
}
.statement-form{
  min-height: 10em;
  max-height: 30em;
  overflow-y: auto;
  left: 50px;
  text-align: left;
  border-radius: 5px;
}

.form-btn{
  position: relative;
  left: 290px;
  border-radius: 5px;
}
.card-link{
  position: relative;
  text-align: right;
  padding-right: 50px;
}


</style>
<div class="card border-dark mb-3" style="width: 50rem;">
  <div class="card-body">
    <h1 class="card-title"><%= (t '.q') %></h1>
    <span class="questionform" id="qform">
      <%= form_with(model: [@genre, @question], local: true) do |form| %>
          <p class="statement-title"><% form.label :statement %></p>
          <p><%= form.rich_text_area :statement, placeholder: "本文や画像",  class: "statement-form" %></p>
          <p><%= form.submit "登録", class: "form-btn" %></p>
      <% end %>
    </span>
    </div>
</div>

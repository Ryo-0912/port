<h1>パスワードリセット画面</h1>

<%= form_with model: @user, url: password_reset_path(@token), local: true, method: :put do |f| %>
  <%= f.label :email %>
  <%= @user.email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit %>
<% end %>
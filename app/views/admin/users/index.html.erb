<style>
  .table {
    text-align: center;
  }
</style>

<div>
  <%= "ユーザー数" %>
  <%= @users.count %>

  <%= "アクティブユーザー数" %>
  <%= User.where(last_login_at: 1.week.ago.beginning_of_day..Time.zone.now.end_of_day).count %>

  <% if current_user.admin == true %>
    <% if unchecked_notifications.any? %>
        <i class="far fa-bell"></i>
    <% end %>
    <%=link_to "通知一覧へ", notifications_path %>
  <% end %>

  <table class="table table-sm table-bordered border-primary">
    <thead>
      <tr>
        <th scope="col">id</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">管理者</th>
        <th scope="col">作成日</th>
        <th scope="col">更新日</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.admin? ? 'あり' : 'なし' %></td>
          <td><%= user.created_at %></td>
          <td><%= user.updated_at %></td>
          <td><%= link_to "編集", edit_admin_user_path(user) %></td>
          <td><%= link_to "削除", [:admin, user], method: :delete, data: { confirm: "ユーザー「#{user.name}」を削除します。よろしいですか？" } %></td>
      <% end %>
    </tbody>
  </table>
</div>
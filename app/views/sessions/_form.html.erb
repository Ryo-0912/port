<style>
  .field {
    font-family: ヒラギノ丸ゴ Pro;
    border-radius: 5px;
  }
  .actions {
    font-family: ヒラギノ丸ゴ Pro;
  }
  .session_form{
    border-radius: 5px;
  }
  .session_form_btn{
    border-radius: 5px;
  }
</style>
<%= form_with url: login_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br/>
    <%= f.text_field :email, id: 'session_email', class: "session_form"%>
  </div>
  <br>
  <div class="field">
    <%= f.label :password, "パスワード" %><br/>
    <%= f.password_field :password, id: 'session_password', class: "session_form" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "ログイン", class: "session_form_btn" %>
  </div>
<% end %>

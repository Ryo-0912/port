<%= render 'shared/error_messages' %>

<h1 class="user_register-title"><%= (t '.user-register') %></h1>
<div class="user_register">
  <%= form_with model: @user, local: true do |f| %>
    <div class="field">
      <p><%= f.label :name, (t '.name') %></p>
      <p><%= f.text_field :name, class: "user_form"  %></p>
    </div>
    <div class="field">
      <p><%= f.label :email, (t '.email') %></p>
      <p><%= f.text_field :email, class: "user_form"  %></p>
    </div>
    <div class="field">
      <p><%= f.label :password, (t '.password') %></p>
      <p><%= f.password_field :password, class: "user_form"  %></p>
    </div>
    <div class="field">
      <p><%= f.label :password_confirmation, (t '.password_confirmation') %></p>
      <p><%= f.password_field :password_confirmation, class: "user_form"  %></p>
    </div>
    <p><%= f.submit '登録', class: "user_form_btn" %></p>
  <% end %>
</div>